<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/facebook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="Facebook"
        android:textAppearance="?android:textAppearanceLarge" />

    <EditText
        android:id="@+id/facebook_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_title"
        android:layout_marginBottom="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/facebook_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebook_username"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/twitter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebook_password"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="Twitter"
        android:textAppearance="?android:textAppearanceLarge" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twitter_title" />

    <TextView
        android:id="@+id/google_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:text="Google Account"
        android:textAppearance="?android:textAppearanceLarge" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/google_account"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/current_google_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/google_sign_in_button"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/current_google_account"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:text="Work Location"
        android:textAppearance="?android:textAppearanceLarge" />

    <EditText
        android:id="@+id/work_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/work_title"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:hint="Address"
        android:inputType="text" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/work_location"
        android:layout_marginEnd="20dp"
        android:onClick="handleButtonPress"
        android:text="Submit" />

</RelativeLayout>