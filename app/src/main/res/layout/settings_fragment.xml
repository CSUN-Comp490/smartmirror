<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="org.main.smartmirror.smartmirror.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <!-- Application Brightness -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_screen_brightness"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/brightness_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/brightness_vlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vlow" />

            <RadioButton
                android:id="@+id/brightness_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_low" />

            <RadioButton
                android:id="@+id/brightness_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_medium" />

            <RadioButton
                android:id="@+id/brightness_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_high" />

            <RadioButton
                android:id="@+id/brightness_vhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vhigh" />
        </RadioGroup>

        <!-- night light brightness -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_night_light_brightness"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/light_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/light_vlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vlow" />

            <RadioButton
                android:id="@+id/light_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_low" />

            <RadioButton
                android:id="@+id/light_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_medium" />

            <RadioButton
                android:id="@+id/light_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_high" />

            <RadioButton
                android:id="@+id/light_vhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vhigh" />
        </RadioGroup>

        <!-- system volume setting -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_system_vol"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/sys_vol_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sys_vol_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_off" />

            <RadioButton
                android:id="@+id/sys_vol_vlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vlow" />

            <RadioButton
                android:id="@+id/sys_vol_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_low" />

            <RadioButton
                android:id="@+id/sys_vol_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_medium" />

            <RadioButton
                android:id="@+id/sys_vol_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_high" />

            <RadioButton
                android:id="@+id/sys_vol_vhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vhigh" />
        </RadioGroup>

        <!-- music volume -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_music_vol"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/mus_vol_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mus_vol_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_off" />

            <RadioButton
                android:id="@+id/mus_vol_vlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vlow" />

            <RadioButton
                android:id="@+id/mus_vol_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_low" />

            <RadioButton
                android:id="@+id/mus_vol_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_medium" />

            <RadioButton
                android:id="@+id/mus_vol_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_high" />

            <RadioButton
                android:id="@+id/mus_vol_vhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_vhigh" />
        </RadioGroup>

        <!-- speech frequency settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_speech_freq"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/speech_frequency_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/speech_never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_never" />

            <RadioButton
                android:id="@+id/speech_rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_rare" />

            <RadioButton
                android:id="@+id/speech_often"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_often" />

            <RadioButton
                android:id="@+id/speech_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/settings_always" />
        </RadioGroup>

        <Switch
            android:id="@+id/switch_camera_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Camera: On"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch_voice_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Voice Recognition: On"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch_remote_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Remote Control Access: On"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- weather display units -->
        <Switch
            android:id="@+id/switch_weather_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:switchTextAppearance="@color/white"
            android:text="Weather Units: English"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>
