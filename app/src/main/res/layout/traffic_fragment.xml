<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="org.main.smartmirror.smartmirror.TrafficFragment">

    <ImageView
        android:id="@+id/traffic_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_traffic_display"/>

    <TextView
        android:id="@+id/traffic_distance"
        android:layout_toRightOf="@id/traffic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/traffic_current"
        android:layout_toRightOf="@id/traffic_icon"
        android:layout_below="@id/traffic_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/traffic_delay"
        android:layout_toRightOf="@id/traffic_icon"
        android:layout_below="@id/traffic_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>