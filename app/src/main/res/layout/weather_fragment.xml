<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="15dp"
	android:orientation="vertical"
	tools:context="org.main.smartmirror.smartmirror.WeatherFragment">
	<!-- Date and time -->	<TextView
		android:id="@+id/date_display"
		android:text="Sun, Oct. 23"
		android:textSize="30sp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<!-- Current weather, temp and humidity-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/weather_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<!-- current temp -->
		<TextView
			android:id="@+id/current_temp"
			android:text="70&#176;"
			android:textSize="30sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="10dp"
			android:orientation="vertical">
            <!-- current humidity -->
            <TextView
                android:id="@+id/current_humidity"
                android:text="Humidity: 30%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- current wind -->
            <TextView
                android:id="@+id/current_wind"
                android:text="Wind: 2 mph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<!-- weather forecast for upcoming hours -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<include android:id="@+id/forecast_h1" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h2" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h3" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h4" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h5" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h6" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h7" layout="@layout/weather_hourly_forecast"/>
		<include android:id="@+id/forecast_h8" layout="@layout/weather_hourly_forecast"/>
	</LinearLayout>

</LinearLayout>
